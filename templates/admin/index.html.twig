{% extends 'base.html.twig' %}

{% block title %}RLM | Admin Panel{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Welcome to Racing League Manager!</h1>
    You're currently in the admin panel, {{ app.user.username }}:
    <ul>
        <li><a href="{{ path('admin_championship') }}">Create Championship</a></li>
        <li><a href="{{ path('admin_race') }}">Create Race</a></li>
        <li><a href="{{ path('historic_championships') }}">See Championships and Races</a></li>
    </ul>
    <hr>
    <a href="">Back to the User Panel</a>
    <br>
    <a href="{{ path('app_logout') }}">Log out of your account</a>
</div>
{% endblock %}
