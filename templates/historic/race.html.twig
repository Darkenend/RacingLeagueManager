{% extends 'base.html.twig' %}
{% set championship = "" %}
{% for race in races %}
    {% set championship = race.championshipId.name %}
{% endfor %}
{% block title %}RLM | {{ championship }}{% endblock %}
{% block body %}
    <h1>
        {{ championship }}
    </h1>
    <table class="table table-striped table-borderless">
        <thead class="thead-dark">
        <tr>
            <th>Circuit</th>
            <th>Free Practice Length</th>
            <th>Qualifying Length</th>
            <th>Race Length</th>
            <th>Results</th>
        </tr>
        </thead>
        <tbody>
        {% for race in races %}
            <tr>
                <td>
                    {{ race.track | replace({'_2019': ""}) | replace({'_': " "}) | capitalize }}
                </td>
                <td>
                    {{ race.practiceLength }} minutes
                </td>
                <td>
                    {{ race.qualyLength }} minutes
                </td>
                <td>
                    {{ race.raceLength }} minutes
                </td>
                <td>
                    <a href="{{ path('historic_race', {'id': race.id })}}">
                        Results
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('historic_championships') }}">Go Back to Championships</a>
{% endblock %}
